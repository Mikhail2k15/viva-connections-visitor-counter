{
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.2",
  "body": [
    {
      "type": "TextBlock",
      "text": "Analytics for the last 30 days",
      "wrap": true,
      "weight": "Bolder",
      "size": "large",
      "spacing": "small"
    },
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "Microsoft Teams vs SharePoint Portal"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Microsoft Teams: ${msteams}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "SharePoint: ${spo}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "Microsoft Teams Details"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Microsoft Teams Desktop: ${desktop}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Microsoft Teams Mobile: ${mobile}",
              "wrap": true
            }
          ]
        }
      ]
    }
    ,
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Microsoft Teams Web: ${web}",
              "wrap": true
            }
          ]
        }
      ]
    }    
  ]
}